---
import Layout from "@/layouts/Layout.astro";
import EligibleTasksManager from "@/components/admin/EligibleTasksManager";

if (Astro.locals.user?.rank !== "Admin") {
  return Astro.redirect("/app");
}
---

<Layout title="Tarefas elegíveis">
  <p class="text-sm text-muted-foreground">
    Mantém a lista de tarefas elegíveis organizada por macroprocesso e processo para acelerar a configuração dos engagements.
  </p>
  <EligibleTasksManager client:load />
</Layout>
